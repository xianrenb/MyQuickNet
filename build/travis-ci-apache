<VirtualHost *:80>
  # [...]

  DocumentRoot %TRAVIS_BUILD_DIR%/src
  ServerPath /MyQuickNet/

  <Directory "%TRAVIS_BUILD_DIR%/src">
    Options FollowSymLinks MultiViews ExecCGI
    AllowOverride All
    Order deny,allow
    Allow from all
  </Directory>

  # Wire up Apache to use Travis CI's hhvm.
  <IfModule mod_fastcgi.c>
    <FilesMatch \.php$>
      SetHandler hhvm-php-extension
    </FilesMatch>

    <FilesMatch \.hh$>
      SetHandler hhvm-hack-extension
    </FilesMatch>

    Alias /hhvm /hhvm
    Action hhvm-php-extension /hhvm virtual
    Action hhvm-hack-extension /hhvm virtual

    FastCgiExternalServer /hhvm -socket /var/run/hhvm/sock -pass-header Authorization -idle-timeout 300
  </IfModule>

  # [...]
</VirtualHost>

